<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.iadlmenu.IADLmenu">

    <Button
        android:layout_width="200dip"
        android:layout_height="150dip"
        android:text="基本日常生活活動能力\n(BADL)"
        android:textSize="22dip"
        android:textColor="#FFFFFF"
        android:id="@+id/buttonBADL"
        android:drawableRight="@drawable/badl"
        android:background="@drawable/badlstyle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dip"
        android:layout_height="150dip"
        android:text="工具性日常生活活動能力\n(IADL)"
        android:id="@+id/buttonIADL"
        android:textSize="22dip"
        android:textColor="#FFFFFF"
        android:drawableRight="@drawable/iadl"
        android:background="@drawable/iadlstyle"
        android:layout_below="@+id/buttonBADL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/frameLayout3"
        android:background="@drawable/phonestyle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonIADL">

        <ImageView
            android:layout_width="291dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:background="@drawable/newgogologo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/button5"
            android:layout_gravity="center_horizontal" />
    </FrameLayout>

</RelativeLayout>
