<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textSize="22dip"
        android:textColor="#FFFFFF"
        android:text="開始測驗"
        android:gravity="center"
        android:drawableRight="@drawable/start2"
        android:id="@+id/button2"
        android:background="@drawable/starttest"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:textSize="22dip"
        android:textColor="#FFFFFF"
        android:text="顯示結果"
        android:gravity="center"
        android:drawableRight="@drawable/calender"
        android:id="@+id/button3"
        android:background="@drawable/showresult"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView9"
        android:background="#ffd5be" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="顯示結果"
        android:id="@+id/textView9"
        android:background="@drawable/phonestyle"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/spinner5"
        android:layout_alignEnd="@+id/spinner5" />
</RelativeLayout>
